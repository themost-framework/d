{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "target": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "paths": {
      "@themost/d/core": [ "src/core/index" ],
      "@themost/d/platform-server": [ "src/core/platform-server" ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
